generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  email         String       @unique
  name          String?
  password      String
  avatar        String?
  Supervisor    User?        @relation("user_supervisor", fields: [supervisor_id], references: [id])
  Members       User[]       @relation("user_supervisor")
  supervisor_id Int?
  created_at    DateTime     @default(now())
  updated_at    DateTime     @default(now())
  Tasks         Task[]
  Assignments   Assignment[]

  @@map("users")
}

model Task {
  id            Int          @id @default(autoincrement())
  name          String
  desc          String       @db.Text
  deliverable   String?
  status        Int          @default(1)
  start_date    DateTime     @default(now())
  deadline      DateTime?
  percentage    Decimal?
  supervisor    User?        @relation(fields: [supervisor_id], references: [id])
  supervisor_id Int?
  created_at    DateTime     @default(now())
  updated_at    DateTime     @default(now())
  Assignments   Assignment[]
  Progresses    Progress[]

  @@map("tasks")
}

model Assignment {
  id         Int        @id @default(autoincrement())
  User       User       @relation(fields: [user_id], references: [id])
  user_id    Int
  Task       Task       @relation(fields: [task_id], references: [id])
  task_id    Int
  position   String?
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now())
  Progresses Progress[]

  @@unique([user_id, task_id])
  @@map("user_tasks")
}

model Progress {
  id          Int        @id @default(autoincrement())
  Assignment  Assignment @relation(fields: [user_id, task_id], references: [user_id, task_id])
  user_id     Int
  task_id     Int
  achievement String
  problem     String?
  next_plan   String?
  percentage  Decimal?
  created_at  DateTime   @default(now())
  updated_at  DateTime   @default(now())
  Task        Task?      @relation(fields: [task_id], references: [id])

  @@map("progresses")
}
